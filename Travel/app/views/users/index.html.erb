
<% if current_user.is? :admin %>
    <div class="container">
    <div class="row">
        <div class="col-md-11 scroll">
        <table class="table table-striped">
            <thead class="thead-dark">
            <tr>
                <th scope="col"><h1>All Users</h1></th>
            </tr>
            </thead>
        </table>

    <font size="3" >
    <table style="width:100%">
    <thead>
        <tr>
        <th>Index</th>
        <th>Name</th>
        <th>Surname</th>
        <th>Birth Date</th>
        <th>Nickname</th>
        <th>Email</th>
        <th>Favorite Place</th>
        <th>Bio</th>
        <th>Likes</th>
        <th>Dislikes</th>
        <th>Roles</th>
        <th>More</th>
        </tr>

    </thead>
        <% @users.each_with_index do |user,index| %>
        <tbody>
            <td rowspan="1">
            <%= index %>
            </td>
            <td rowspan="1">
            <%= user.name %>
            </td>
            <td rowspan="1">
            <%= user.surname %>
            </td>
            <td rowspan="1">
            <%= user.birth_date %>
            </td>
            <td rowspan="1">
            <%= user.nickname %>
            </td>
            <td rowspan="1">
            <%= user.email %>
            </td>
            <td rowspan="1">
            <%= user.favorite_place %>
            </td>
            <td rowspan="1">
            <%= user.bio %>
            </td>
            <td rowspan="1">
            <%= user.num_likes %>
            </td>
            <td rowspan="1">
            <%= user.num_dislikes %>
            </td>
            <td rowspan="1">
            <%= user.role_strings.join(',') %>
            </td>
            <td rowspan="1">
            <%= link_to "#{user.name}", user_path(user) %>
            </td>
        <% end %>
        </tbody>
    </table>
    </font>
<%else%>
    <h1>You don't have the rights to access this page!</h1>
<%end%>
