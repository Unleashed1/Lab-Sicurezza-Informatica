<head>
    <link rel="stylesheet" href="../../../assets/static_pages/style.css">
	<link rel="stylesheet" href="../../../assets/static_pages/signup.css">
</head>
<body>
<div id="logreg-forms">
    <h1 class="h3 mb-3 font-weight-normal" style="text-align: center"> Sign Up</h1>
        <div class="social-login">
            <button class="btn facebook-btn social-btn btn-block" type="button"><span><em class="fab fa-facebook-f"></em> <strong>Sign up with Facebook</strong></span></button>
        </div>
        <p style="text-align:center"> OR  </p>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control", placeholder: "Email" %>
          <br/>
          <%= f.password_field :password, autocomplete: "current-password", :class => "form-control", placeholder: "Password" %>
          <br/>
          <%= f.password_field :password_confirmation, autocomplete: "current-password", :class => "form-control", placeholder: "Password Confirmation" %>
          <br/>
          <%= f.text_field :name, autocomplete: "current-name", :class => "form-control", placeholder: "Name" %>
          <br/>
          <%= f.text_field :surname, autocomplete: "current-surname", :class => "form-control", placeholder: "Surname" %>
          <br/>
          <%= f.date_select :birth_date, { start_year: 100.years.ago.year, end_year: Date.today.year, default: Date.today} , autocomplete: "current-birth_date", :class => "form-control", placeholder: "Birt Date" %>
          <br/>
          <%= f.text_field :nickname, autocomplete: "current-nickname", :class => "form-control", placeholder: "Nickname" %>
          <br/>
          <%= f.text_area :bio, autocomplete: "current-bio", :class => "form-control", placeholder: "Bio", cols: 30, rows:10 %>
          <br/>
        </div>
        <br/>
        <div class="actions">
          <%= f.submit "Sign Up", :class=>"btn btn-success btn-block action" %>
        </div>
        <br/>

        <% end %>
    </div>
</body>
