
%h2 Details about #{@user.name}
 
%ul#details
  %li
    Name:
    = @user.name
  %li
    Surname:
    = @user.surname
  %li
    Birth Date:
    = @user.birth_date.strftime("%F")
  %li
    Nickname:
    = @user.nickname
  %li
    Email:
    = @user.email
  %li
    Favorite Places:
    = @user.favorite_places
 
%h3 Bio:
 
%p#bio= @user.bio
 
  %li
    Reviews:
    = @user.num_reviews
  %li
    Likes:
    = @user.num_likes
    
= link_to 'Back to user list', users_path
