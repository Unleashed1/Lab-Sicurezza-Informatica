  <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
</head>

<div id="logreg-forms">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), :class => "form-signin") do |f| %>
    <h1 class="h3 mb-3 font-weight-normal" style="text-align: center"> Log in</h1>
    <div class="social-login">
      <button class="btn facebook-btn social-btn btn-block" type="button"><span><em class="fab fa-facebook-f"></em> Log in with Facebook</span></button>
    </div>
    <p style="text-align:center"> OR  </p>
    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control", placeholder: "Email" %>
      <%= f.password_field :password, autocomplete: "current-password", :class => "form-control", placeholder: "Password" %>
      <%= f.submit "Log in", :class=>"btn btn-success btn-block action" %>
    <table>
      <tr>
      <td id="td0">
        <a href="#" id="forgot_pswd">Forgot password?</a>   <%# DA CAMBIARE %>
      </td>
      <td id="td1">
        <%= f.check_box :remember_me%>  Remember Me
      </td>
      </tr>
    </table>
    <hr>
    <%= f.submit "Sign Up", :class=>"btn btn-primary btn-block", :id=>"btn-signup" %>
  <% end %>
</div>


<%= render "users/shared/links" %>