<h1 style = 'text-align:center'><strong>Travel with US!</strong></h1><br>
    <div id="search">
    <input type="email" id="inputEmail" class="form-control" placeholder="Find a place" required="" autofocus="">
    
    </div>
    <div class="box">
        <div align="center">
        
            <h1>Top Places</h1><br/>
            <% Place.order(:avarage => 'desc').limit(4).each do |place| %>
                <div class="boxphoto">
                    <%= icon_for place%>
                    <h3><%= place.name %></h3>
                    <p><%= place.city %></p>
                </div>
            <%end%>
        </div>
    </div>

    <div class="boxp">
        <div class="title">
            <h1>Top Users</h1>
        </div>
        <% User.order(:num_dislikes,num_likes: :desc).limit(4).each do |user| %>
                <div class="boxphoto">
                    <%= gravatar_for user%>
                    <h3><%= user.name %></h3>
                </div>
            <%end%>

    </div>


