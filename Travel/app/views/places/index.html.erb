<div class="container">
  <div class="row">
    <div class="col-md-11 scroll">
      <table class="table table-striped">
        <thead class="thead-dark">
          <tr>
            <th scope="col"><h1>All Places</h1></th>
          </tr>
        </thead>
      </table>


<table style="width:100%">
 <thead>
    <tr>
      <th>Index</th>
      <th>Place Name</th>
      <th>Street</th>
      <th>Address</th>
      <th>City</th>
      <th>Telephone Number</th>
      <th>Opening Time</th>
      <th>Closing Time</th>
      <th>Description</th>
      <th>Notices</th>
    </tr>
  </thead>
</table>
    <% @places.each_with_index do |place,index| %>
      <table style="width:100%">
        <tbody>
          <tr>
          <td>
            <%= index %>
          </td>
          <td>
            <%= place.name %>
          </td>
          <td>
            <%= place.street %>
          </td>
          <td>
            <%= place.address %>
          </td>
          <td>
            <%= place.city %>
          </td>
          <td>
            <%= place.telephone_number %>
          </td>
          <td>
            <%= if(!place.opening_time.nil?); place.opening_time.strftime("%H:%M"); else  "-"; end; %>
          </td>
          <td>
            <%= if(!place.closing_time.nil?); place.closing_time.strftime("%H:%M"); else  "-"; end; %>
          </td>
          <td>
            <%= place.description %>
          </td>
          <td>
            <%= place.notices %>
          </td>
          <td>
            <%= link_to "More about #{place.name}", place_path(place) %>
          </td>
          </tr>
        </tbody>
    </table>
    <% end %>
<br/>

<th><%= link_to 'Add new place', new_place_path %></th>
